{
    "manifest_version": 3,
    "name": "Fab Extended",
    "version": "0.1.5",
    "description": "Improving the Fab.com experience",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.fab.com/*"],
        "js": ["app/toastifyjs/toastify-js.js","app/utils.js", "app/storage.js", "app/favorite.js", "app/addToCart.js", "app/technicalDetails.js", "app/product.js"],
        "css": ["app/toastifyjs/toastify.min.css","app/styles.css"]
      }
    ],
    "background": {
      "service_worker": "app/background.js"
    },
    "icons": {
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup/popup.html"
    }
  }
