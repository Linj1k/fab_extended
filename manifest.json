{
    "manifest_version": 3,
    "name": "Fab Extended",
    "version": "0.0.2",
    "description": "Improving the Fab.com experience",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.fab.com/*"],
        "js": ["app/utils.js", "app/storage.js", "app/product.js"],
        "css": ["app/styles.css"]
      }
    ],
    "icons": {
      "128": "icon.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    }
  }
